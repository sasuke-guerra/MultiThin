@model  List<Tarea.Models.Tareas>


<div class="jumbotron text-center bg-dark text-white">
    <h2>Registro de Tarea</h2>
</div>





<div class="row justify-content-center">
    <form action="ProcesarFormulario"   method="post">

        <div class="row justify-content-center">
            <div class="form-group col-md-10">
                <label for="materia">Materia</label>
                <input required type="text" name="materia" id="materia" class="form-control"  />
            </div>
            <div class="form-group col-md-10">
                <label for="fecha">Fecha</label>
                <input required type="date" id="fecha" name="fecha" class="form-control" />
            </div>
            <div class="form-group col-md-10">
                <label for="des">Descripcion</label>
                <textarea required id="des" name="des" class="form-control"></textarea>
            </div>

        </div>
        <div class="row justify-content-center ">
            <div class="form-group col-md-10">
                <button class="btn btn-dark form-control" type="submit">Registrar</button>
            </div>
        </div>

    </form>





</div>



<table class="table table-dark container">
    <thead>
        <tr>
            
            <th scope="col">Materia</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Fecha</th>
        </tr>
    </thead>
    <tbody>
            @if (Model.Count != -1)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                      <tr>
                          <td>
                              @Model[i].Materia
                          </td>
                          <td>
                              @Model[i].Descripcion
                          </td>
                          <td>
                              @Model[i].Fecha
                          </td>


                      </tr>
                   
                }
            }
        
    </tbody>
</table>

